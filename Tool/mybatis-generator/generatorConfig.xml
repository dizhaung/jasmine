<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <!-- 数据库驱动包 -->
    <classPathEntry location="mysql-connector-java-5.1.26-bin.jar" />

    <context id="DBTables" targetRuntime="MyBatis3">

        <!-- 是否去除自动生成的注释 -->
        <commentGenerator>
            <property name="suppressDate" value="true" />
            <property name="suppressAllComments" value="true" />
        </commentGenerator>
        <!-- 配置数据库连接信息 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
            connectionURL="jdbc:mysql://localhost/core" userId="root" password="ai1103">
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <!-- 生成模型的包名和位置 -->
        <javaModelGenerator targetPackage="core.com.model"
            targetProject="../../src/main/java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <!-- 生成映射文件包名和位置 -->
        <sqlMapGenerator targetPackage="mapper"
            targetProject="../../src/main/resources">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>
        <!-- 生成DAO文件包名和位置 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="core.com.dao"
            targetProject="../../src/main/java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <table tableName="user" domainObjectName="User"></table>
        <table tableName="comment" domainObjectName="Comment"></table>
        <table tableName="blog" domainObjectName="Blog"></table>
        <table tableName="sys_menu" domainObjectName="SysMenu"></table>
        <table tableName="tag_label" domainObjectName="TagLabel"></table>
        <table tableName="config_blog_label" domainObjectName="ConfigBlogLabel"></table>

    </context>
</generatorConfiguration>
